bindsym --release $mod+Print exec scrot -z -s '/home/grzechu/Pictures/Screenshots/%Y-%m-%d_%H:%M:%S.png' -e 'xclip -selection clipboard -target image/png -i $f' && notify-send "Screenshot" "Rectangular screenshot has been saved" -t 1000



